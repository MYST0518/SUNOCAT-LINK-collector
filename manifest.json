{
    "manifest_version": 3,
    "name": "SUNOCAT Link Collector",
    "version": "1.1.2",
    "description": "Collect SUNO song links and paste them into SUNOCAT Player",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://suno-playlist.vercel.app/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}